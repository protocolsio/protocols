ions":[],"username":null,"link":null,"image":{"source":null,"placeholder":null},"badges":[],"research_interests":null,"blocked_by_you":false,"blocked_you":false,"hide_following":false},{"name":"Naeem Nadaf","affiliation":"Broad Institute of MIT and Harvard","affiliations":[],"username":null,"link":null,"image":{"source":null,"placeholder":null},"badges":[],"research_interests":null,"blocked_by_you":false,"blocked_you":false,"hide_following":false},{"name":"Nehal Patel","affiliation":"Massachusetts General Hospital","affiliations":[],"username":null,"link":null,"image":{"source":null,"placeholder":null},"badges":[],"research_interests":null,"blocked_by_you":false,"blocked_you":false,"hide_following":false},{"name":"Evan Macosko","affiliation":"Broad Institute of MIT and Harvard","affiliations":[],"username":null,"link":null,"image":{"source":null,"placeholder":null},"badges":[],"research_interests":null,"blocked_by_you":false,"blocked_you":false,"hide_following":false}],"versions":[],"groups":[],"is_owner":1,"has_subprotocols":0,"is_subprotocol":0,"is_bookmarked":0,"can_be_copied":1,"can_remove_fork":1,"forks_count":{"private":0,"public":0},"access":{"can_view":1,"can_remove":0,"can_add":0,"can_edit":0,"can_publish":0,"can_get_doi":0,"can_share":1,"can_move":1,"can_move_outside":1,"can_transfer":1,"can_download":1,"is_locked":0},"guid":"62494DC049DE11EAA83BC32498DECEF7","state_version_id":154,"steps":[{"id":880158,"guid":"1FA39E6049E011EAA83BC32498DECEF7","previous_id":null,"previous_guid":null,"modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"A26F6EB203BA443BB579D6EA1BC50E4F","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"9D981BC971444970B0088C7B50038F91","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Mice are anesthetized with 3% isoflourane prior to cardiac perfusion with ice cold HEPES-Sucrose Cutting Solution:<\/div><div style = \"text-align :; float : ;\"><img style = \"\" src = \"https:\/\/s3.amazonaws.com\/protocols-files\/public\/0e025772aa51b6732100a6179b9c999dc9c429466c9ee37955a3d016d3015fbe\/byeu9rj6.png\" \/><\/div><\/div>"}},{"id":1054725,"guid":"3ACD2352E1BE465F8E7A6F42373B189B","order_id":2,"type_id":1,"title":"description","source":{"description":"<div style = \"text-align :; float : ;\"><img style = \"\" src = \"https:\/\/s3.amazonaws.com\/protocols-files\/public\/0e025772aa51b6732100a6179b9c999dc9c429466c9ee37955a3d016d3015fbe\/byeu9rj6.png\" \/><\/div>"}}],"cases":[],"data":null,"section":null,"section_color":"","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":880159,"guid":"1FA43AA049E011EAA83BC32498DECEF7","previous_id":880158,"previous_guid":"1FA39E6049E011EAA83BC32498DECEF7","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"711729D754954FE598D5EA6DF436B25D","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"83C466EBA060495DBEB9CA5853E33457","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Their head is removed by bisecting between c2 and c3 with large scissors.  The brain is removed immediately as follows:<\/div><\/div>"}}],"cases":[],"data":null,"section":null,"section_color":"","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":880160,"guid":"1FA4AFD049E011EAA83BC32498DECEF7","previous_id":880159,"previous_guid":"1FA43AA049E011EAA83BC32498DECEF7","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"577D59AD69C5457A9CBB681A25F563A0","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"A6AAA97017D1476AA42245643D031F52","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">The cranial and facial skin and fat pads are peeled forward and the splenius capitis muscle is removed with a forceps exposure the dural sheath covering the fossa between the foramen magnum and the first cervical vertebra.  A small pointed scissor is used to pierce the sheath in a rostral-caudal direction and then the 1 or 2 cervical vertebra are cut along the dorsal midline.<\/div><\/div>"}}],"cases":[],"data":null,"section":null,"section_color":"","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":880161,"guid":"1FA4FDF149E011EAA83BC32498DECEF7","previous_id":880160,"previous_guid":"1FA4AFD049E011EAA83BC32498DECEF7","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"6BA71A46413E4E12AAD628CF0191465A","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"F723B1A5303F4BEFAC2B0F4D2FC8E98F","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">The same scissors are then inserted carefully 1-2mm into the foramen magnum with the lower blade pressing upward against the inner edge of the skull cavity.  Proceed to snip the skull along the midline keeping constant gentle upward pressure so as not to cut or piece or otherwise damage the brain.  Cut sagittally all the way up along the midline through the intra-orbital area over the olfactory bulbs.<\/div><\/div>"}}],"cases":[],"data":null,"section":null,"section_color":"","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":880162,"guid":"1FA5732149E011EAA83BC32498DECEF7","previous_id":880161,"previous_guid":"1FA4FDF149E011EAA83BC32498DECEF7","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"E6D5B6AD22CF4A4E93A4FD024FADF59B","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"3F25A61C671744C8A63946F812AA800C","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Using a small toothed forceps, grab the midline edge of the bone covering the cerebellum and gently push the entire hemisphere of cut bone away from the midline.  It will break, and only part of it will be removed from over the underlaying brain tissue.  Repeat the process until the bone from the foramen magnum up to the orbit is removed.  Then do the other side.  Be most careful of the cerebellar parafloculus - that lobe nestles inside of a little fossa of the temporal bone along the lateral side of the cerebellum (ie, behind the ear) and we don't want to tear it off.<\/div><\/div>"}}],"cases":[],"data":null,"section":null,"section_color":"","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":880163,"guid":"1FA5E85149E011EAA83BC32498DECEF7","previous_id":880162,"previous_guid":"1FA5732149E011EAA83BC32498DECEF7","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"4E9C8B2AF10D41F2B1B370D63F685233","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"F22E688D498047F09375601C15F98C50","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">The bone around the cribiform plate and orbit is particularly thick - this must be carefully picked away around the olfactory bulbs which are inside of it.  Once the bulbs are fully exposed on the dorsal aspect they can be gently eased caudally using a blunt instrument like a small weighing spatula.  As you release the olfactory bulbs, continue to \u201croll\u201d the brain up and back from the inner rostral skull.  The optic nerves will appear under the brain next - use the small scissors to cut them leaving the chiasma intact (this makes a great landmark later).  Next comes the carotid artery - cut as well - then towards the posterior the basilar artery and some of the small cranial nerves appear.  Try to cut vs. tear these if you can.<\/div><\/div>"}}],"cases":[],"data":null,"section":null,"section_color":"","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":880164,"guid":"1FA6849049E011EAA83BC32498DECEF7","previous_id":880163,"previous_guid":"1FA5E85149E011EAA83BC32498DECEF7","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"11C1F95709A84E1E88207C9223EDE565","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"526E69F565F441298F751C9D3E5A594B","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">The entire operation thus far should have been less than ten minutes from start of anesthesia.  If you are taking longer, you just need practice, don't waste your time using the RNA from practice brains.<\/div><\/div>"}}],"cases":[],"data":null,"section":null,"section_color":"","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":880165,"guid":"1FA720D049E011EAA83BC32498DECEF7","previous_id":880164,"previous_guid":"1FA6849049E011EAA83BC32498DECEF7","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"554E45ED30A044BA95288CD67273BB36","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"BC12266DC3FC44C9924DD6EEFCDE2C3F","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Now the brain is ready to freeze.  Wash in cold PBS to remove any hair, blood or misc. debris.  Blot gently the excess PBS, not dry, but not swimming in liquid that will turn to ice in the next steps.  Watch the movie. <\/div><div style = \"text-align :; float : ;\"><video style = \"\" src = \"https:\/\/s3.amazonaws.com\/protocols-files\/public\/0e025772aa51b6732100a6179b9c999dc9c429466c9ee37955a3d016d3015fbe\/byet9rj6.mp4\" \/><\/div><\/div>"}},{"id":1054725,"guid":"4E7F82D8C4B149EDA1662C54354BB04E","order_id":2,"type_id":1,"title":"description","source":{"description":"<div style = \"text-align :; float : ;\"><video style = \"\" src = \"https:\/\/s3.amazonaws.com\/protocols-files\/public\/0e025772aa51b6732100a6179b9c999dc9c429466c9ee37955a3d016d3015fbe\/byet9rj6.mp4\" \/><\/div>"}}],"cases":[],"data":null,"section":null,"section_color":"","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":880166,"guid":"1FA7BD1049E011EAA83BC32498DECEF7","previous_id":880165,"previous_guid":"1FA720D049E011EAA83BC32498DECEF7","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"BEBE0BD49EDA496DACFC373A7D42CBC8","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"5E49B94ACB02419CB1090EF9A16AAE5D","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Keep the brain frozen at -80 until use.  We store whole mouse brains in a small 5 ml tube that has 2 ml of OCT frozen in the bottom (in advance).  This OCT serves as a moisture reservoir that keeps the brain from sublimation and drying during long term storage.  Desiccated brain tissue has poor RNA quality.<\/div><\/div>"}}],"cases":[],"data":null,"section":null,"section_color":"","section_duration":0,"critical":null,"critical_id":null,"duration":0}],"document":null,"materials":[],"description":"<div class = \"text-blocks\"><\/div>","changed_on":1581714784}