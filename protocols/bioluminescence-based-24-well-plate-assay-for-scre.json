ious_id":1194550,"previous_guid":"C56D7A20E7C442829875E39B87BD7947","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"559E56F143314C8BBC4DB038586E94CC","order_id":1,"type_id":6,"title":"Section","source":{"title":"Preparation of 24 well plates"}},{"id":1054724,"guid":"61011C0351B042C3BE34FC84274D51BA","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Sterilise your 24-well plates and lids using UV irradiation in a biological safety cabinet for at least an hour.<\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"#94EBFF","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":1194552,"guid":"FA166F41775849A99ED8278524393661","previous_id":1194551,"previous_guid":"586EA7CDB64A45E8B09BFFE0BAA870C0","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"C89E8AB96FDD4410A1D927D8E2C3C72A","order_id":1,"type_id":6,"title":"Section","source":{"title":"Preparation of 24 well plates"}},{"id":1054724,"guid":"1C64B56A59024B08BB604F49CB8608FD","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Dispense 0.5 mL of each agar type into the three wells each of a 24-well plate using a serological pipette. Our plate layout is shown in Figure 1.<\/div><div style = \"text-align :; float : ;\"><img style = \"\" src = \"https:\/\/s3.amazonaws.com\/protocols-files\/files\/dsw34af6.jpg\" \/><\/div><\/div>"}},{"id":1054725,"guid":"6CAAA469F81C465BB2D1A7B8EB9A5830","order_id":2,"type_id":1,"title":"description","source":{"description":"<div style = \"text-align :; float : ;\"><img style = \"\" src = \"https:\/\/s3.amazonaws.com\/protocols-files\/files\/dsw34af6.jpg\" \/><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"#94EBFF","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":1194553,"guid":"B78E8B08B