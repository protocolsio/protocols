odified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"18283DEE03EC4CDE9AEA496B3BCBC33A","order_id":1,"type_id":6,"title":"Section","source":{"title":"Challenge Assay"}},{"id":1054724,"guid":"23F28648546048F3ACD0259A8037D6AE","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Oftentimes, as time progresses, the challenge will do more damage, killing more cells, meaning that for later time points you may not need as many dilution tubes for serial dilutions, though protective fatty acids may increase survival. This will be something to consider before planning your experiment.<\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"#A492FF","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":1080629,"guid":"C24E44E02DD711EBB242559EBB14AF16","previous_id":1080627,"previous_guid":"B35039D02DD711EBB242559EBB14AF16","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"4E183FD05EAF4E04AAC9CEE6A207692D","order_id":1,"type_id":6,"title":"Section","source":{"title":"Challenge Assay"}},{"id":1054724,"guid":"B8765FE502D04A4E9BFC52CF9FB7CEBB","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Prepare overnights of strains.<\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"#A492FF","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":1080630,"guid":"CB1F0B402DD711EBB242559EBB14AF16","previous_id":1080629,"previous_guid":"C24E44E02DD711EBB242559EBB14AF16","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"92987778F9454576975D31CDB4E95244","order_id":1,"type_id":6,"title":"Section","source":{"title":"Challenge Assay"}},{"id":1054724,"guid":"E2CAEC6487304558BEAE0FB5847D2D26","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">In the morning, dilute cells to an optical density of 0.01 in10 mL supplemented BHI.<\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"#A492FF","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":1080631,"guid":"DC57C4102DD711EBB242559EBB14AF16","previous_id":1080630,"previous_guid":"CB1F0B402DD711EBB242559EBB14AF16","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"A7B60C4F3E5449548A79807C47F7270B","order_id":1,"type_id":6,"title":"Section","source":{"title":"Challenge Assay"}},{"id":1054724,"guid":"833A5A322D8C4259AEA679B2D3E69D86","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Give an appropriate amount of time for them to reach the same OD; if necessary, start cultures in the incubator at varying times depending on the strain\/condition.<\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"#A492FF","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":1080632,"guid":"E97B1BB02DD711EBB242559EBB14AF16","previous_id":1080631,"previous_guid":"DC57C4102DD711EBB242559EBB14AF16","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"304E0EBA5A724D6984A99DE3B33A46AC","order_id":1,"type_id":6,"title":"Section","source":{"title":"Challenge Assay"}},{"id":1054724,"guid":"83070FC485C54D63A8433D20FD122BCE","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">For long-term supplementation, add a supplement to BHI before adding O\/N culture.<\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"#A492FF","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":1080633,"guid":"FA7D82402DD711EBB242559EBB14AF16","previous_id":1080632,"previous_guid":"E97B1BB02DD711EBB242559EBB14AF16","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"7C33F7285FD84D38B097A5F4DD638A0A","order_id":1,"type_id":6,"title":"Section","source":{"title":"Challenge Assay"}},{"id":1054724,"guid":"F0002DF01FD74E79892C2EF8F29A06F8","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">For short-term supplementation, grow cells to an OD of ~0.225-0.25 before adding a supplement, then incubate another half-hour before moving on to step 5.<\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"#A492FF","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":1080634,"guid":"172AF8502DD811EBB242559EBB14AF16","previous_id":1080633,"previous_guid":"FA7D82402DD711EBB242559EBB14AF16","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"E02EC152074D4B6AAFBAEC642D23D402","order_id":1,"type_id":6,"title":"Section","source":{"title":"Challenge Assay"}},{"id":1054724,"guid":"1A40912062F148BE8B655F36E5CB9294","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Harvest cells \u2013 centrifuge; flood with PBS, wash 2x, resuspend in 10 mL BHI.<\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"#A492FF","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":1080635,"guid":"292AF8C02DD811EBB242559EBB14AF16","previous_id":1080634,"previous_guid":"172AF8502DD811EBB242559EBB14AF16","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"CDEE76E737224B5686E9DD961ACC14DF","order_id":1,"type_id":6,"title":"Section","source":{"title":"Challenge Assay"}},{"id":1054724,"guid":"6B52DB3FF8D644CD8DD1780EDC14990E","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Note for daptomycin you need to use calcium for it to be active. So, grow cells, harvest them (with washing steps as required), then resuspend in BHI + 1.5 mM calcium chloride.<\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"#A492FF","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":1080636,"guid":"44C3A3702DD811EBB242559EBB14AF16","previous_id":1080635,"previous_guid":"292AF8C02DD811EBB242559EBB14AF16","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"7A233883650446EEA99876C3C1D373B0","order_id":1,"type_id":6,"title":"Section","source":{"title":"Challenge Assay"}},{"id":1054724,"guid":"666D2E92796D4D9DB71E42C2E80F23AB","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Take time point zero. Serially dilute culture in dilution tubes containing 0.9% NaCl.<\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"#A492FF","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":1080637,"guid":"4D5FEC502DD811EBB242559EBB14AF16","previous_id":1080636,"previous_guid":"44C3A3702DD811EBB242559EBB14AF16","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"28D5E1135D8A40C0B99A95031F8BE033","order_id":1,"type_id":6,"title":"Section","source":{"title":"Challenge Assay"}},{"id":1054724,"guid":"ACE02577DC1F4195AAC3C2CDA83612EB","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Add appropriatevolume\/concentration ofchallenge(SDS,daptomycin, bile,etc.)<\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"#A492FF","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":1080638,"guid":"545032E02DD811EBB242559EBB14AF16","previous_id":1080637,"previous_guid":"4D5FEC502DD811EBB242559EBB14AF16","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"973F46985B7346AF9ACF198C663BCADC","order_id":1,"type_id":6,"title":"Section","s