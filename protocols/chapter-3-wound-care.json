{"id":42304,"title":"Chapter 3: Wound care","title_html":"<p>Chapter 3: Wound care<\/p>","image":{"source":"https:\/\/s3.amazonaws.com\/protocols-files\/public\/ee7cdf8d566dca26e3bfb52d37b7ea6449611f22739894b3f75bad8fd1f55ee0\/ckp6bafcf.png","placeholder":"https:\/\/s3.amazonaws.com\/protocols-files\/public\/ee7cdf8d566dca26e3bfb52d37b7ea6449611f22739894b3f75bad8fd1f55ee0\/ckp6bafcf.png"},"doi":null,"doi_status":0,"uri":"chapter-3-wound-care-bmi8k4hw","type_id":1,"template_id":4,"published_on":1603098698,"parent_protocols":[],"parent_collections":[],"cited_protocols":[],"version_id":0,"version_data":{"id":"0","code":"bmi8k4hw","parent_id":0,"parent_uri":null,"is_same_owner":false,"has_pending_merge_request":false,"has_approved_merge_request":false},"created_on":1600643732,"modified_on":null,"categories":null,"public":1,"is_unlisted":0,"creator":{"name":"Kerri Wolter","affiliation":null,"affiliations":[],"username":"w2y28403w2x2","note":null,"link":null,"image":{"source":"\/img\/avatars\/003.png","placeholder":"\/img\/avatars\/003.png"},"badges":[{"id":4,"image":{"source":"\/img\/badges\/gold.svg","placeholder":"\/img\/badges\/gold.svg"},"name":"Gold power author!"}],"verified":0,"is_verified_user":false,"research_interests":null,"blocked_by_you":false,"blocked_you":false,"hide_following":false},"journal":null,"journal_name":null,"journal_link":null,"article_citation":null,"has_versions":0,"link":null,"total_collections":1,"number_of_steps":22,"authors":[{"name":"Kerri Wolter","affiliation":"VulPro","affiliations":[],"username":"w2y28403w2x2","note":null,"link":null,"image":{"source":"\/img\/avatars\/003.png","placeholder":"\/img\/avatars\/003.png"},"badges":[],"verified":1,"is_verified_user":true,"research_interests":null,"blocked_by_you":false,"blocked_you":false,"hide_following":false}],"versions":[],"groups":[{"id":9229,"uri":"vulpro","title":"VulPro","image":{"source":"https:\/\/www.protocols.io\/img\/group_placeholder.png","placeholder":"https:\/\/www.protocols