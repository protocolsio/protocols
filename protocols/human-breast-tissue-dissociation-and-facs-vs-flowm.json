_groups":0,"has_collaborations":0},"user_status":{"is_member":true,"is_confirmed":true,"is_invited":false,"is_owner":false,"is_admin":false,"is_following":false},"join_link":null,"token":null,"owner":{"name":" ","affiliation":null,"affiliations":[],"username":null,"note":null,"link":null,"image":{"source":null,"placeholder":null},"badges":[],"verified":0,"is_verified_user":false,"research_interests":null,"blocked_by_you":false,"blocked_you":false,"hide_following":false},"is_protocol_requested":0,"is_group_requested":0,"is_my":false,"is_request":false,"is_confirmed":1,"is_declined":0,"requester":{"name":" ","affiliation":null,"affiliation_url":null,"username":null,"link":null},"protocol":{"id":0,"title":"Human breast tissue dissociation and FACS vs Flowmi processing for scRNA-Seq","title_html":"Human breast tissue dissociation and FACS vs Flowmi processing for scRNA-Seq","image":{"source":null,"placeholder":null},"doi":null,"doi_status":0,"uri":"human-breast-tissue-dissociation-and-facs-vs-flowm-bu2qnydw","type_id":1,"template_id":0,"published_on":null,"stats":{"number_of_views":0,"number_of_steps":0,"number_of_bookmarks":0,"number_of_comments":0,"number_of_exports":0,"number_of_runs":0,"number_of_votes":0,"is_voted":0},"parent_protocols":[],"parent_collections":[],"cited_protocols":[]},"created_on":1621052019,"resolve_on":0,"resolved_user":{"name":" ","affiliation":null,"affiliations":[],"username":null,"note":null,"link":null,"image":{"source":null,"placeholder":null},"badges":[],"verified":0,"is_verified_user":false,"research_interests":null,"blocked_by_you":false,"blocked_you":false,"hide_following":false},"shared":false}}],"is_owner":1,"has_subprotocols":0,"is_subprotocol":0,"is_bookmarked":0,"can_claim_authorship":0,"can_accept_authorship":0,"can_be_copied":1,"can_remove_fork":1,"fork_id":null,"url":"https:\/\/www.protocols.io\/view\/human-breast-tissue-dissociation-and-facs-vs-flowm-bu2qnydw","forks_count":{"private":0,"public":0},"access":{"can_view":1,"can_remove":0,"can_add":0,"can_edit":0,"can_publish":0,"can_get_doi":0,"can_share":1,"can_move":1,"can_move_outside":1,"can_transfer":1,"can_download":1,"is_locked":0},"guid":"FDFE3B20B4FB11EB90228F7486D2740D","state_version_id":351,"steps":[{"id":1179276,"guid":"346502A0B4FE11EB90228F7486D2740D","previous_id":null,"previous_guid":null,"modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"704CCBCD14A1423B9576B37EC8607ED4","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"E314C211D7D048028655829DCB69BB25","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\"><span style = \"font-weight:bold;\">Initial Tissue Preparation<\/span><\/div><div class = \"text-block\"><ol style = \"list-style-type: decimal;\"><li style = \"counter-reset:ol0;\">Transfer breast tissue specimen to 150 x 22 mm cell culture dish. Remove medium and wash 3 times with 50-100 mL ice-cold PBS.<\/li><li style = \"counter-reset:ol0;\"><span style = \"font-style:italic;\">Optional: If histological analysis is desired, separate tissue pieces and process as desired.<\/span><\/li><\/ol><\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":null,"section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":1179280,"guid":"55AFF5A0B4FE11EB90228F7486D2740D","previous_id":1179276,"previous_guid":"346502A0B4FE11EB90228F7486D2740D","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"39CDA9EDCCCB467599D320FEA9D63E6D","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"3CBA2C86D52649B89D24D77B953121CC","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\"><span style = \"font-weight:bold;\">Mechanical Digestion<\/span><\/div><div class = \"text-block\"><ol style = \"list-style-type: decimal;\"><li style = \"counter-reset:ol0;\">Using forceps and scalpels, remove soft, white\/yellow adipose-rich regions to enrich for epithelial\/fibrous areas with a roseate appearance and rather stiff consistency.<\/li><li style = \"counter-reset:ol0;\">Transfer tissue to a new 150 x 22 mm dish and weigh. Record tissue weight. Discard removed tissue according to biosafety guidelines for biohazardous material.<\/li><li style = \"counter-reset:ol0;\">Fix a 150 x 22 mm dish containing breast tissue to benchtop\/hood surface using tape. This will facilitate mechanical digestion by avoiding that the dish slides while cutting tissue. Mechanically digest breast tissue by mincing it using two no. 10 sharp scalpels. Chop until tissue gets to a paste-like consistency (this can take up to 1.5 hours, depending on tissue amount and stiffness).<\/li><\/ol><\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":null,"section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":1179317,"guid":"A9012710B4FE11EB90228F7486D2740D","previous_id":1179280,"previous_guid":"55AFF5A0B4FE11EB90228F7486D2740D","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"8DF73A32402E4217833C2D7A8751463A","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"76AB80DEEDA24B50BAF5777EF57DBC2E","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\"><span style = \"font-weight:bold;\">Enzymatic Digestion<\/span><\/div><div class = \"text-block\"><ol style = \"list-style-type: decimal;\"><li style = \"counter-reset:ol0;\">Transfer up to 5 ml of minced tissue per 50 ml conical tube and add 40 ml digestion buffer.<\/li><li style = \"counter-reset:ol0;\">Incubate tissues in digestion buffer at 37\u00b0C in a shaker at 180-200 rpm for 6 hours.<\/li><li style = \"counter-reset:ol0;\">Pellet digested tissue at 350 g for 5 minutes at 4\u00b0C, aspirate supernatant, and wash with 50 ml ice-cold PBS. Repeat wash and pellet cells.<\/li><li style = \"counter-reset:ol0;\">Gently resuspend pellet in 2 ml 0.05 % Trypsin-EDTA, pipette mix and incubate at 37\u00b0C for 6 minutes. Pipette mix gently every 2 minutes using a p1000 pipette.<\/li><li style = \"counter-reset:ol0;\">Quench Trypsin with 10 ml DMEM with 10% FBS and pellet cells by centrifuging at 350 g for 5 minutes at 4\u00b0C.<\/li><li style = \"counter-reset:ol0;\">Resuspend pellet in 1 ml DMEM with 10 % FBS and add 100 \u00b5l DNase I stock (1 mg\/mL) for a final concentration of 10 \u00b5g\/ml. Incubate for 5 minutes at 37 \u00b0C.<\/li><li style = \"counter-reset:ol0;\">Quench reaction by adding 10 ml DMEM with 10 % FBS. Resuspend cells gently and pass through a 70 \u00b5m cell strainer into a new 50 mL conical tube.<\/li><li style = \"counter-reset:ol0;\">Centrifuge at 350 g for 5 minutes at 4\u00b0C.<\/li><\/ol><\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":null,"section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":1179318,"guid":"D0AD6710B4FE11EB90228F7486D2740D","previous_id":1179317,"previous_guid":"A9012710B4FE11EB90228F7486D2740D","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"DF24EAC104314CD0946FD7F22564AD19","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"6645E933CFF24558AAAF9FE2D324BD50","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\"><span style = \"font-weight:bold;\">Red Blood Cell Lysis<\/span><\/div><div class = \"text-block\"><ol style = \"list-style-type: decimal;\"><li style = \"counter-reset:ol0;\">Aspirate supernatant and wash cells with 20 mL ice-cold PBS. Centrifuge at 350 g for 5 minutes at 4\u00b0C.<\/li><li style = \"counter-reset:ol0;\">Aspirate supernatant and gently resuspend pellet in 1 ml ACK red blood cell lysis buffer. Gently swirl cell suspension. Incubate for 30 seconds \u2013 1 minutes at room temperature.<\/li><li style = \"counter-reset:ol0;\">Quench by adding 10 ml ice-cold PBS (without serum or BSA) and spin down at 350 g for 5 minutes. Resuspend pellet in 1 ml DMEM + 10% FBS and transfer to 1.5ml Eppendorf tubes. Count cells with Trypan blue on a Countess automated cell counter.<\/li><li style = \"counter-reset:ol0;\">Split cell suspension into two parts: half of the cell suspension will be subjected to FACS sorting and the other half will be washed and filtered using a 40 \u00b5m Flowmi filter. Always keep cells on ice.<\/li><\/ol><\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":null,"section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":1179320,"guid":"FE3F8280B4FE11EB90228F7486D2740D","previous_id":1179318,"previous_guid":"D0AD6710B4FE11EB90228F7486D2740D","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"F9D32ABAAF7D478FAED0D494C0142F46","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"B0C2A6594690448BAE1AA7D97D7375F3","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\"><span style = \"font-weight:bold;\">FACS sorting<\/span><\/div><div class = \"text-block\"><ol style = \"list-style-type: decimal;\"><li style = \"counter-reset:ol0;\">Pass cell suspension to be sorted through a 35 \u00b5m filter capped FACS tube.<\/li><li style = \"counter-reset:ol0;\">Separate an aliquot with 50,000 \u2013 100,000 cells into another FACS tube. This will be an unstained sample to set up the live\/dead cell gate.<\/li><li style = \"counter-reset:ol0;\">Prepare one 5 mL FACS tube with 1 mL DMEM + 10% FBS medium for collecting sorted cells.<\/li><li style = \"counter-reset:ol0;\">Add SYTOX Green viability dye to the remaining sample to a final dilution of 1:1,000.<\/li><li style = \"counter-reset:ol0;\">Sort viable single cells on FACSAria Fusion (or alternative fluorescence-activated cell sorter). Gate out debris and doublets and use unstained sample to set up live\/dead cell gate. Sort all live cells (SYTOX Green negative) in the sample using 4-way purity precision setting.<\/li><li style = \"counter-reset:ol0;\">Pellet sorted cells by centrifuging at 350 g for 5 minutes at 4\u00b0C. Resuspend cells gently using a wide bore p100 pipette in 1 mL PBS + 1% BSA. Count cells and always keep cells on ice.<\/li><\/ol><\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":null,"section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":1179322,"guid":"17574EB0B4FF11EB90228F7486D2740D","previous_id":1179320,"previous_guid":"FE3F8280B4FE11EB90228F7486D2740D","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"EFCAC3D1E2B04EBE982B911559346039","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"E43F5D0A2E594383A5F81A2E2E476283","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\"><span style = \"font-weight:bold;\">Flowmi filtering<\/span><\/div><div class = \"text-block\"><ol style = \"list-style-type: decimal;\"><li style = \"counter-reset:ol0;\">Pass cells kept for Flowmi filtering through a 35 \u00b5m filter capped FACS tube. Add 2 mL PBS + 1% BSA and pellet at 350 g for 5 minutes at 4\u00b0C.<\/li><li style = \"counter-reset:ol0;\">Aspirate supernatant and gently resuspend pellet in 2mL PBS + 1% BSA using p1000 wide bore pipettes. Repeat centrifugation from previous step.<\/li><li style = \"counter-reset:ol0;\">Gently resuspend cells in 1 mL PBS + 1% BSA.<\/li><li style = \"counter-reset:ol0;\">Pass cell suspension through a 40 \u00b5m Flowmi filter attached to a wide bore p1000 pipette into a new 1.5 mL Eppendorf tube. Count cells. Always keep cells on ice.<\/li><\/ol><\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":null,"section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":1179324,"guid":"2DB440A0B4FF11EB90228F7486D2740D","previous_id":1179322,"previous_guid":"17574EB0B4FF11EB90228F7486D2740D","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"5DC4FC6194F84A86903991C7174590A7","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"B1060080EA7C4C0A9EB1DE15EA261374","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\"><span style = \"font-style:italic;font-weight:bold;\">Optional: <\/span><span style = \"font-weight:bold;\">MULTI-seq labeling and 10x Chromium GEM generation<\/span><\/div><div class = \"text-block\"><ol style = \"list-style-type: decimal;\"><li style = \"counter-reset:ol0;\"><span>If multiplexing is desired, proceed to MULTI-seq labeling of each sample according to McGinnis <\/span><span style = \"font-style:italic;\">et al., <\/span><span>Nat Methods 2019 (doi: 0.1038\/s41592-019-0433-8). MULTI-seq labeling can be done using a 1 \u00b5M final concentration of LMOs and barcodes for up to 500,000 cells.<\/span><\/li><li style = \"counter-reset:ol0;\">After sample barcoding, pool samples and centrifuge at 350 g for 5 minutes at 4\u00b0C. Aspirate supernatant and resuspend in PBS + 1% BSA. Count cells always keep cells on ice.<\/li><\/ol><\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":null,"section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":1179326,"guid":"40BADBA0B4FF11EB90228F7486D2740D","previous_id":1179324,"previous_guid":"2DB440A0B4FF11EB90228F7486D2740D","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"550E5032972C450BA14F658B63047A34","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"06FFB416D20348D484B3D99836AE0885","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\"><span style = \"font-weight:bold;\">Loading onto 10x chip for GEM generation<\/span><\/div><div class = \"text-block\"><ol style = \"list-style-type: decimal;\"><\/ol><\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":null,"section_duration":0,"critical":null,"critical_id":null,"duration":0}],"document":"","materials":[],"description":"<div class = \"text-blocks\"><div class = \"text-block\">Single cell RNA-Seq of human breast tissue requires tissue dissociation into viable single cell suspensions. Here, we describe a protocol for digestion of human breast tissue and compare two methods to obtain viable single cell suspensions using either fluorescence activated cell sorting (FACS) or several wash steps and Flowmi cell filtering.<\/div><\/div>","changed_on":1621052018}