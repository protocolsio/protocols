ocol":0,"is_bookmarked":0,"can_claim_authorship":0,"can_accept_authorship":0,"can_be_copied":1,"can_remove_fork":1,"fork_id":null,"url":"https:\/\/www.protocols.io\/view\/hmw-dna-extraction-from-diverse-plants-species-for-5t7g6rn","forks_count":{"private":0,"public":0},"access":{"can_view":1,"can_remove":0,"can_add":0,"can_edit":0,"can_publish":0,"can_get_doi":0,"can_share":1,"can_move":1,"can_move_outside":1,"can_transfer":1,"can_download":1,"is_locked":0},"guid":"6096C8A6BDB711E9A1D70242AC11000B","state_version_id":5331,"steps":[{"id":787022,"guid":"D9F1CFB0AECE11E98F66AFC19C29E890","previous_id":null,"previous_guid":null,"modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"6BB7183EC59C4D3F8CBFFF6E8CC802EF","order_id":1,"type_id":6,"title":"Section","source":{"title":"Cell Lysis"}},{"id":1054724,"guid":"026FCC1590CC43D48121EC00830D7DFA","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Incubate Lysis Buffer at 65 \u00b0C for at least 30 minutes (gently mix the tube every 10 minutes). For convenience, one can aliquote 600 \u00b5l Lysis Buffer in a 2 ml tube per sample and incubate in the water bath.<\/div><div class = \"text-block\">Keep the SDS Lysis Buffer at 65\u00b0C until the tissue powder is added (the buffer has to be warm to ensure that powder is well dissolved).<\/div><\/div>"}},{"id":1054725,"guid":"C17893EF5F294FC283B254486DCA0881","order_id":2,"type_id":19,"title":"safety","source":{"body":"<div class = \"text-blocks\"><div class = \"text-block\">Work under a fume hood until the end of the protocol because of the presence of BME, Phenol and Chloroform.<\/div><\/div>","link":""}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"#A492FF","section_duration":3600,"critical":null,"critical_id":null,"duration":1800},{"id":787023,"guid":"D9F970D0AECE11E98F66AFC19C29E890","previous_id":871998,"previous_guid":"3D3EFAB03D5A11EA9823B14B6D3567C6","modifi