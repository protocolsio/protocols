":0,"is_verified_user":false,"research_interests":null,"blocked_by_you":false,"blocked_you":false,"hide_following":false},"is_protocol_requested":0,"is_group_requested":0,"is_my":false,"is_request":false,"is_confirmed":1,"is_declined":0,"requester":{"name":" ","affiliation":null,"affiliation_url":null,"username":null,"link":null},"protocol":{"id":0,"title":"Thymectomy procedure to remove native thymus of NSG mice","title_html":"Thymectomy procedure to remove native thymus of NSG mice","image":{"source":null,"placeholder":null},"doi":null,"doi_status":0,"uri":"thymectomy-procedure-to-remove-native-thymus-of-ns-bvrhn536","type_id":1,"template_id":0,"published_on":null,"stats":{"number_of_views":0,"number_of_steps":0,"number_of_bookmarks":0,"number_of_comments":0,"number_of_exports":0,"number_of_runs":0,"number_of_votes":0,"is_voted":0},"parent_protocols":[],"parent_collections":[],"cited_protocols":[]},"created_on":1632495209,"resolve_on":0,"resolved_user":{"name":" ","affiliation":null,"affiliations":[],"username":null,"note":null,"link":null,"image":{"source":null,"placeholder":null},"badges":[],"verified":0,"is_verified_user":false,"research_interests":null,"blocked_by_you":false,"blocked_you":false,"hide_following":false},"shared":false}}],"is_owner":1,"has_subprotocols":0,"is_subprotocol":0,"is_bookmarked":0,"can_claim_authorship":0,"can_accept_authorship":0,"can_be_copied":1,"can_remove_fork":1,"fork_id":null,"url":"https:\/\/www.protocols.io\/view\/thymectomy-procedure-to-remove-native-thymus-of-ns-bvrhn536","forks_count":{"private":0,"public":0},"access":{"can_view":1,"can_remove":0,"can_add":0,"can_edit":0,"can_publish":0,"can_get_doi":0,"can_share":1,"can_move":1,"can_move_outside":1,"can_transfer":1,"can_download":1,"is_locked":0},"guid":"F675E930CAC611EBA4F8AFE7AD345293","state_version_id":80,"steps":[{"id":1194967,"guid":"D7BEFFD0CACC11EBA4F8AFE7AD345293","previous_id":null,"previous_guid":null,"modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"73678AD6EB2B4DED87B6DF195C915918","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"8490BD522DC54547B1C2C96E3C8DC513","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">The anterior neck is shaved and disinfected with betadine and 70% alcohol consisting of three alternate swabs followed by a final application of betadine solution. Limbs are gently restrained using rubber bands. <\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":1194968,"guid":"04DC3960CACD11EBA4F8AFE7AD345293","previous_id":1194967,"previous_guid":"D7BEFFD0CACC11EBA4F8AFE7AD345293","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"C2E6A60A7E354B3EAF7CB6C71A326CBD","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"4E25CFB18A004FA3A26E7CF5EE57A7A3","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Using a pair of forceps, the skin at the junction of the neck and chest is grasped and a vertical midline incision is made with scissors. Alternatively, a scalpel blade may be used to make the incision. 1-2 drops of 2% lidocaine are applied on the incision site for local analgesia.<\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":1194969,"guid":"14FF3C70CACD11EBA4F8AFE7AD345293","previous_id":1194968,"previous_guid":"04DC3960CACD11EBA4F8AFE7AD345293","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"CCDD28B8EBFB4A09B34FC09628818E73","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"DD2D09A681914D599C264654512C6D66","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Using two pair of forceps, skin is gently detached from the connective tissues underneath.<\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":1194970,"guid":"211D0AF0CACD11EBA4F8AFE7AD345293","previous_id":1194969,"previous_guid":"14FF3C70CACD11EBA4F8AFE7AD345293","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"C535BBE83B2043598D866F947DBED268","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"3E38DBEA49E64122ADB39D0AD4BA9D30","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">The thyroid gland and surrounding connective and fat tissues are mobilized upward by blunt dissection using the forceps. The trachea becomes visible, although muscles are still superficial to it. <\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":1194971,"guid":"2F602A70CACD11EBA4F8AFE7AD345293","previous_id":1194970,"previous_guid":"211D0AF0CACD11EBA4F8AFE7AD345293","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"31B64D4013074F2496663EA7560C2909","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"99E4DE65EBE54307931CDF4A29FCE211","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Muscles superficial to the trachea, including the sternocleidomastoid, sternohyoid and sternothyroid muscles are grasped with a pair of forceps.<\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":1194972,"guid":"3D05D170CACD11EBA4F8AFE7AD345293","previous_id":1194971,"previous_guid":"2F602A70CACD11EBA4F8AFE7AD345293","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"2610BA7960544A43B2FC2152029543CD","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"101060C3097F4B3DB9A0875DDD0FE064","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Using the other pair of forceps, a space is made underneath the muscles by detaching them from the underlying tissues, which include the trachea. <\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":1194973,"guid":"4A0C7950CACD11EBA4F8AFE7AD345293","previous_id":1194972,"previous_guid":"3D05D170CACD11EBA4F8AFE7AD345293","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"E3D00957E6DA4685943245C539557AD8","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"38A7DD2E78DC4F7C819B541047A860E0","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">While holding the muscles up with a pair of forceps, the sternal attachment site is cut using scissors. It is critical not to cut or damage the trachea itself.<\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":1194974,"guid":"570C4360CACD11EBA4F8AFE7AD345293","previous_id":1194973,"previous_guid":"4A0C7950CACD11EBA4F8AFE7AD345293","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"5D859FEA45D649D0A7F9795379553121","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"CB5069DDD52C4E71B79E6683AADD08A8","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">The muscles that are now cut at their sternal end are pulled up. The trachea is now fully exposed. <\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":1194975,"guid":"62A355B0CACD11EBA4F8AFE7AD345293","previous_id":1194974,"previous_guid":"570C4360CACD11EBA4F8AFE7AD345293","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"7B609475BFDC4139B0812C5DFEAEB94B","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"40A6560242A84249B048CAD9980E86B7","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Using a 0.8 mm curved Iris forceps (held in the left hand for right-handed people), the sternum is elevated. The surgeon should position him\/herself in a way to be able to see into the mediastinum. Having a light source is recommended to increase the visibility. The thymus itself would not be visible yet at this step. A second 0.8 mm Iris forceps is inserted into the mediastinum (held in the right hand for right-handed people) while its prongs are in an open position and the curves are facing down. It should be inserted through for about 1cm. The forceps should be closed immediately and the tissue that is grasped by the forceps should be pulled out until it is visible. The thymus tissue will not be visible before it is grasped by the forceps. As the surgeon sees into the mediastinum, he\/she will observe a dead-ended space. However, as the forceps with its prongs in an open position is further advanced through the mediastinum, the seemingly dead-ended space will open up and the forceps will pass through a hole. Immediately after passing through this hole, the forceps should be closed to grasp the thymus and it should be pulled out.<\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":1194976,"guid":"87852B10CACD11EBA4F8AFE7AD345293","previous_id":1194975,"previous_guid":"62A355B0CACD11EBA4F8AFE7AD345293","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"04E392BBCA5642C495F382CE6DB6ADDC","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"809A5D7F940A4FC68E0208330B07717D","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">The right lobe of the thymus, which is at a superior position is usually grasped and pulled out by this step. <\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":1194978,"guid":"968E32A0CACD11EBA4F8AFE7AD345293","previous_id":1194976,"previous_guid":"87852B10CACD11EBA4F8AFE7AD345293","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"54A1856EA78F435D8095E4615A90F53F","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"BF1AA47CFE5B4790B6685FF86686E40B","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Using the forceps in the left hand, the right lobe of the thymus is re-grasped and gently pulled up and toward the left side, so that the left lobe of the thymus is also exposed.<\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":1194979,"guid":"A0B53A30CACD11EBA4F8AFE7AD345293","previous_id":1194978,"previous_guid":"968E32A0CACD11EBA4F8AFE7AD345293","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"5DB98719984A4087A53EBD9C6C509ED3","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"0E08F07D31EF4F1A932FC2A825025C46","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Using the forceps in the right hand, the left lobe, which is usually at the inferior position, is grasped. <\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":1194980,"guid":"AC26C320CACD11EBA4F8AFE7AD345293","previous_id":1194979,"previous_guid":"A0B53A30CACD11EBA4F8AFE7AD345293","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"E8E7E72F40B74DE3851A8E26DBB86EB3","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"00215615D7754E65AE589196C3175DE7","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Thymic lobes are detached from the connective tissue by gently pulling them up. Sometimes it may be necessary to pass the thymic lobes to the other forceps and remove them by passing them repeatedly between the two pairs of forceps in the left and right hands. However, the thymic lobes should never be released, as they will go back to their original position and a second grab would increase the chance of pneumothorax and rupturing the vessels. This step should be performed in less than a minute. Performing this step quickly and acquiring experience will decrease the chance of failure and death. If this step is done quickly and the manipulation is minimum, the amount of air penetrating the thoracic cavity is negligible. Therefore, no ventilation will be necessary.<\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":1194981,"guid":"BB05FB90CACD11EBA4F8AFE7AD345293","previous_id":1194980,"previous_guid":"AC26C320CACD11EBA4F8AFE7AD345293","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"E68CAA47BB2442D0AA06BC008DCCB43D","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"FF69C141DF104235A0399217BFEB9C57","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Immediately, the thyroid and the connective tissues are pulled down to cover the trachea and the mediastinum. Covering the site that was used to pull the thymus out will prevent air from entering into the mediastinal cavity and prevents pneumothorax.<\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":1194982,"guid":"CD2CE4F0CACD11EBA4F8AFE7AD345293","previous_id":1194981,"previous_guid":"BB05FB90CACD11EBA4F8AFE7AD345293","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"959BE54B384B4B4B8416B8D603FAB610","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"E9A5E86088E7401DA70EF4992BC70373","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">The skin at both ends of the incision is grasped using both pairs of forceps to align the incision edges together. <\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":1194983,"guid":"E229AAA0CACD11EBA4F8AFE7AD345293","previous_id":1194982,"previous_guid":"CD2CE4F0CACD11EBA4F8AFE7AD345293","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"48C75C7910364808A08BEA0AF9E0262D","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"497A6473C8CB428BB9A3936303FB550F","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">The incision is closed using staples, which should be removed in 10 days. Mice are then placed in a cage on a heat mat to avoid hypothermia, with care not to overheat the animals. An analgesic such as buprenorphine (0.1mg\/kg, subcutaneous) should be administered prior to initiating the procedure and also every 8-12 hours up to 48 hours to minimize pain\/distress. Also, administration of an antibiotic such as gentamicin (0.5mg\/ml in sterile saline, 100ul\/mouse, subcutaneous) will diminish the risk of infection. <\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":1194984,"guid":"F40AB160CACD11EBA4F8AFE7AD345293","previous_id":1194983,"previous_guid":"E229AAA0CACD11EBA4F8AFE7AD345293","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"D44E20BDB86A4A2C98D04CD355A4C44D","order_id":1,"type_id":6,"title":"Section","source":{"title":"Figure 1. Different steps of the thymectomy surgery"}},{"id":1054724,"guid":"BA87912A641C4020BB86DBE47EF78CCC","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div style = \"text-align :; float : ;\"><img style = \"\" src = \"https:\/\/s3.amazonaws.com\/protocols-files\/files\/efke4kcn.jpg\" \/><\/div><br\/><br\/><\/div>"}},{"id":1054725,"guid":"BD30230201A44F2EBFC6BBECE5EBE06D","order_id":2,"type_id":1,"title":"description","source":{"description":"<div style = \"text-align :; float : ;\"><img style = \"\" src = \"https:\/\/s3.amazonaws.com\/protocols-files\/files\/efke4kcn.jpg\" \/><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"#A492FF","section_duration":0,"critical":null,"critical_id":null,"duration":0}],"document":"","materials":[],"description":"<div class = \"text-blocks\"><div class = \"text-block\">This protocol details our approach to removing the native thymus from an NSG mouse. The NSG mouse thymus is atrophied, but through experiments in our lab, we have found that these thymi are still functional and capable of producing CD3+ cells. Removal of these native thymi prevents the production of CD3+ cells in NSG mice if a replacement thymus is not implanted. Due to their atrophic state, the native thymi are difficult to visualize during surgery and much practice is required to reduce mortality during the operation.<\/div><br\/><br\/><br\/><\/div>","changed_on":1632495209}