{"id":45875,"title":"C-SOP-202: Genomic DNA Purity Measurement using a Nanodrop Spectrophotometer","title_html":"<p>C-SOP-202: Genomic DNA Purity Measurement using a Nanodrop Spectrophotometer<\/p>","image":{"source":"https:\/\/s3.amazonaws.com\/protocols-files\/files\/cujabf8zp.png","placeholder":"https:\/\/s3.amazonaws.com\/protocols-files\/files\/cujabf8zp.png"},"doi":null,"doi_status":0,"uri":"c-sop-202-genomic-dna-purity-measurement-using-a-n-bq2tmyen","type_id":1,"template_id":4,"published_on":1610734491,"parent_protocols":[],"parent_collections":[],"cited_protocols":[],"version_id":0,"version_data":{"id":"0","code":"bq2tmyen","parent_id":0,"parent_uri":null,"is_same_owner":false,"has_pending_merge_request":false,"has_approved_merge_request":false},"created_on":1609107645,"modified_on":null,"categories":null,"public":1,"is_unlisted":0,"creator":{"name":"Mihir Kekre","affiliation":"Centre for Genomic Pathogen Surveillance","affiliations":[{"affiliation":"Centre for Genomic Pathogen Surveillance","url":"https:\/\/www.pathogensurveillance.net\/","is_default":1},{"affiliation":"Oxford Big Data Institute","url":"https:\/\/www.bdi.ox.ac.uk\/","is_default":0},{"affiliation":"Wellcome Genome Campus","url":"https:\/\/www.wellcomegenomecampus.org\/","is_default":0}],"username":"mihir-kekre","note":null,"link":null,"image":{"source":"https:\/\/s3.amazonaws.com\/protocols-files\/public\/78e77839a17b254b52459e0ea3af6a848b72b5db9dcdf86279b9ac4155057a69\/cpx3bf8zp.jpeg","placeholder":"https:\/\/s3.amazonaws.com\/protocols-files\/public\/78e77839a17b254b52459e0ea3af6a848b72b5db9dcdf86279b9ac4155057a69\/cpx3bf8zp.jpeg"},"badges":[{"id":3,"image":{"source":"\/img\/badges\/silver.svg","placeholder":"\/img\/badges\/silver.svg"},"name":"Power author!"}],"verified":0,"is_verified_user":false,"research_interests":null,"blocked_by_you":false,"blocked_you":false,"hide_following":false},"journal":null,"journal_name":null,"journal_link":null,"article_citation":null,"has_versions":0,"lin