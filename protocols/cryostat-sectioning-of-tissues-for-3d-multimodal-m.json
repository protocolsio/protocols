al":[],"critical_id":null,"duration":0},{"id":1161844,"guid":"EA6BD5E224F04900A2ED49690DC95AE7","previous_id":1161843,"previous_guid":"9A8A3D3BBE7A4C80BF8207CD20384198","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"C63D92CFC0BA4D7EBBD34E680259A230","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"663D9F160C194350BCC0F54E22C4ABFD","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Carefully remove blade from container and wipe with ethanol and a lint free wipe.  Insert blade and lock into place.<\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"","section_duration":0,"critical":[],"critical_id":null,"duration":0},{"id":1161845,"guid":"D74F6C39F96F4810813251371389A3DE","previous_id":1161844,"previous_guid":"EA6BD5E224F04900A2ED49690DC95AE7","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"BECC2829A72D4F2291EA891B1D056CDB","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"1561675E221243C889F211B03AD38F46","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Mount sample onto the cryostat chuck using OCT in the desired orientation.  A flat surface can be shaved onto the mounting surface using a razor blade to ensure correct orientation and good adherence.<\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"","section_duration":0,"critical":[],"critical_id":null,"duration":0},{"id":1161846,"guid":"353B92ABE9CD48D098C8D3B8E31798D1","previous_id":1161845,"previous_guid":"D74F6C39F96F4810813251371389A3DE","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"305DC78206904A6BBD9F772BD4A7D34F","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"7C3FACC849DF4158A37824B0BADC61F8","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">The angle of the stage should be adjusted to allow for a less acute passage of the tissue section over the blade as seen in the figure.  Acute angles cause the surrounding CMC to fragment and lose structural integrity.<\/div><div style = \"text-align :; float : ;\"><img style = \"\" src = \"https:\/\/s3.amazonaws.com\/protocols-files\/files\/dc6d6by6.jpg\" \/><\/div><\/div>"}},{"id":1054725,"guid":"F59FF86FE9B74A9BA81335B4A8CEFF12","order_id":2,"type_id":1,"title":"description","source":{"description":"<div style = \"text-align :; float : ;\"><img style = \"\" src = \"https:\/\/s3.amazonaws.com\/protocols-files\/files\/dc6d6by6.jpg\" \/><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"","section_duration":0,"critical":[],"critical_id":null,"duration":0},{"id":1161847,"guid":"0606B4206E824BA0A931C278394DEEB0","previous_id":1161846,"previous_guid":"353B92ABE9CD48D098C8D3B8E31798D1","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"368F585EF45C41E184D0378E3B44BCF9","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"27C4E449392F4E94BA77D3B6DF4402AE","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Trim CMC using larger section increments of 30-50 \u03bcm until the tissue becomes visible.<\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"","section_duration":0,"critical":[],"critical_id":null,"duration":0},{"id":1161848,"guid":"84E20C3AEC9343859AC8F0C2667D9C64","previous_id":1161847,"previous_guid":"0606B4206E824BA0A931C278394DEEB0","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"BC77517FDAC748DF910CB57204444F74","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"3194F2833A894440887691EDAD0A858D","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Before procuring sections for imaging, the blade should be replaced as trimming can cause blade dulling.  This will diminish section quality.<\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"","section_duration":0,"critical":[],"critical_id":null,"duration":0},{"id":1161849,"guid":"0E1FBD5BE4214C0D8D756EA7836A6122","previous_id":1161848,"previous_guid":"84E20C3AEC9343859AC8F0C2667D9C64","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"1D95A7AB5CF742A5B6BA572390012044","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"C6AE2DDD5E434CF5BB4A20DC47DB0E98","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Once the tissue is visible, excess CMC can be removed from around the sample using a precooled razor blade if necessary.<\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"","section_duration":0,"critical":[],"critical_id":null,"duration":0},{"id":1161850,"guid":"9DCF767AF9F44DEABBA6857CBF5E3DF9","previous_id":1161849,"previous_guid":"0E1FBD5BE4214C0D8D756EA7836A6122","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"3158CB5E1F6C41208C48C7C2D569AB2B","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"406C3218A6F24C4FA1E13956F65A7012","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Adjust the section thickness setting to 10\u03bcm.<\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"","section_duration":0,"critical":[],"critical_id":null,"duration":0},{"id":1161851,"guid":"6665A007111E4405A6887ABB8557B05A","previous_id":1161850,"previous_guid":"9DCF767AF9F44DEABBA6857CBF5E3DF9","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"C820705E40A440C3A206FA32E90162CB","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"56DBCFAF1BE640F3A7AD980584D78F55","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Once a desired region for sectioning is reached, ensure the anti-roll bar is positioned appropriately.  It must not be too far towards the sample that it scrapes the tissue.<\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"","section_duration":0,"critical":[],"critical_id":null,"duration":0},{"id":1161852,"guid":"649029BD8EDE48818D2222B308CCF71F","previous_id":1161851,"previous_guid":"6665A007111E4405A6887ABB8557B05A","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"12224A9DB75E4EC4B24EDEDF05C2D815","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"CDFC55F6626E40A0B58A1D4C70F8BBCC","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Once the sectioning becomes reproducible and consistent, obtain the number of desired sections.<\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"","section_duration":0,"critical":[],"critical_id":null,"duration":0},{"id":1161853,"guid":"94C4D57F214D48B4B1C94B20A1870839","previous_id":1161852,"previous_guid":"649029BD8EDE48818D2222B308CCF71F","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"331828946EEB4026939A8420F28D33C5","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"FF206FD04EF84536A1BEAF3B7094EF55","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Add subsequent serial sections to the same slide until full for 3D imaging.  Take care to record any \"lost\" sections as they will affect subsequent data reconstruction.<\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"","section_duration":0,"critical":[],"critical_id":null,"duration":0},{"id":1161854,"guid":"4F32AD5E37FA4B41A4DC5E28701AF44C","previous_id":1161853,"previous_guid":"94C4D57F214D48B4B1C94B20A1870839","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"4FA4DE37DB624DB08E9E40A200A5B13B","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"AE8AFF48685A408985A94184E4886380","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Manipulate each the section into position on a target surface (slide, ITO slide) using a fine tipped paint brush on the surrounding CMC material.  This prevents the contamination or disruption on the tissue.<\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"","section_duration":0,"critical":[],"critical_id":null,"duration":0},{"id":1161855,"guid":"121EE86461BF44B59232D7F1B553E8D9","previous_id":1161854,"previous_guid":"4F32AD5E37FA4B41A4DC5E28701AF44C","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"E60F6B91C43F4673882438245156FA8F","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"EB5F990A128D40EFAAAEAD0E869DF621","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Once all sections are added to the slide, invert and gently press a Teflon coated slide onto the tissues to prevent wrinkles.  <\/div><div class = \"text-block\">Flat sections thaw mount better than wrinkled sections, which thaw at different rates across the tissue.  This can cause tissues to stretch and fold, affecting the morphology and then resulting in artifacts in the imaging data.<\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"","section_duration":0,"critical":[],"critical_id":null,"duration":0},{"id":1161856,"guid":"9F56FA1D05C642B8848581E9E806B8F7","previous_id":1161855,"previous_guid":"121EE86461BF44B59232D7F1B553E8D9","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"8E714646237F4C6CA9A8474DCEA4A16C","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"0C14AAA21BD0408A91FF8F3667B8965F","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Thaw mount the sections onto the target using heat from your gloved hand.  <\/div><div class = \"text-block\"><span>Alternately, use a slide warmer at 20<\/span><span style = \"vertical-align:super;\">o<\/span><span>C to expedite drying.  <\/span><\/div><div class = \"text-block\">Once mounted, the section should be air dried immediately before returning the sample to the cryostat or vacuum desiccator.<\/div><div class = \"text-block\">Note: Imaging mass spectrometry analysis requires mounting onto indium tin oxide coated slides. CODEX immunofluorescence analysis requires mounting onto poly-lysine coated coverslips.<\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"","section_duration":0,"critical":[],"critical_id":null,"duration":0},{"id":1161873,"guid":"98395AA09D6711EBB4E2A57A0FC27146","previous_id":1161856,"previous_guid":"9F56FA1D05C642B8848581E9E806B8F7","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"DAA2E2FF7CB04B56972E71B2D4B661CB","order_id":1,"type_id":6,"title":"Section","source":{"title":""}},{"id":1054724,"guid":"DEB4DFAAB13F478CB87DE9C2E6CD9B2E","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Tissue sections should be stored in a desiccator if undergoing immediate analysis within 24 hours or -80\u00baC within a vacuum sealed slide holder for longer term storage.<\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"","section_duration":0,"critical":null,"critical_id":null,"duration":0}],"document":"","materials":[],"description":"<div class = \"text-blocks\"><div class = \"text-block\">Scope: <\/div><div class = \"text-block\">Protocol for sectioning flash frozen tissue that can be used for 3D IMS or MxIF experiments.<\/div><div class = \"text-block\">Expected Outcome:<\/div><div class = \"text-block\">Serial sections from a tissue that IMS and MxIF can be performed on with subsequent 3D reconstruction<\/div><\/div>","changed_on":1618502684}