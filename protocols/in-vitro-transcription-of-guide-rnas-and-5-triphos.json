d":"E9E5E92A6593466CA2CCB1D3CE3A6468","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"1AB46B69324B4D07990FC8643EFBABC5","order_id":1,"type_id":6,"title":"Section","source":{"title":"DNA template removal"}},{"id":1054724,"guid":"EC5459AEB4F346D39AF39BB8C407DAC3","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Remove DNA template by adding 1 \u00b5l of RNase-free DNase; incubate 15 min at 37C in thermocycler<\/div><\/div>"}},{"id":1054725,"guid":"3693917B3D854C6CAED9A91A01803658","order_id":2,"type_id":4,"title":"duration","source":{"duration":900,"title":"37C incubation"}},{"id":1054726,"guid":"CF936075E08A4FC7A82A638B096C2109","order_id":3,"type_id":20,"title":"reagents","source":{"id":689,"mol_weight":0,"name":"DNase I (RNase-free) - 1,000 units","linfor":"","url":"https:\/\/www.neb.com\/M0303","sku":"M0303S","cas_number":"","rrid":"","public":0,"vendor":{"name":"New England Biolabs","affiliation":null,"affiliations":[],"username":null,"link":"https:\/\/www.neb.com\/","image":{"source":"https:\/\/www.protocols.iohttps:\/\/www.protocols.io\/img\/vendors\/2.png","placeholder":"https:\/\/www.protocols.iohttps:\/\/www.protocols.io\/img\/vendors\/2.png"},"badges":[],"verified":0,"research_interests":null,"blocked_by_you":false,"blocked_you":false,"hide_following":false,"id":2},"can_edit":0,"stats":{"total_protocols":0}}},{"id":1054727,"guid":"A00058C3372C4A7085F114FB7FD77C92","order_id":4,"type_id":24,"title":"temperature","source":{"temperature":37,"unit":"\u00b0C","title":""}}],"cases":[],"data":null,"html":null,"section":null,"section_color":null,"section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":932323,"guid":"0D7EBC2211264B7C9B31949AB4C97A54","previous_id":932322,"previous_guid":"802C28E171684107AB16C626E765D317","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"C48CB822CFDF4E50845AA1C716DB18D3","order_id":1,"type_id":6,"title":"Section","source":{"title":"Removal of 5'-triphosphate groups"}},{"id":1054724,"guid":"2688EA432CA3413B8ED51D0BEC29CC4E","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">T7 in vitro transcription results in RNA carrying a 5'-triphosphate group. This triggers a RIG-I-mediated innate immnue response in mammalian cells and can cause cell death, particularly in primary cells. We highly recommend treating your IVT sgRNA with Alkaline Calf Intestinal Phosphatase (CIP) before proceeding to the purification step. We found that CIP treatment must be rigorous to completely remove all 5-PPP groups from your RNA. However, CIP binds tightly to RNA and NEB recommends to only use the minimal amount needed.<\/div><div class = \"text-block\">Bring your IVT mix to a total volume of 88 ul with RNAse-free water<\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":null,"section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":932324,"guid":"4241AC10CC8143E390EC72767DBBF363","previous_id":932323,"previous_guid":"0D7EBC2211264B7C9B31949AB4C97A54","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"DDAAFF2C00D649D6B90750FC5AD1AA43","order_id":1,"type_id":6,"title":"Section","source":{"title":"Removal of 5'-triphosphate groups"}},{"id":1054724,"guid":"A2E97DE39BA241B3B2023A80EFB681B9","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Add 10ul of NEB buffer 2.1 (comes with the CIP enzyme)<\/div><div class = \"text-block\">Add 2ul (20 units) of CIP<\/div><\/div>"}},{"id":1054725,"guid":"399DEF5C2D064A878F32F10C28D32F0F","order_id":2,"type_id":20,"title":"reagents","source":{"id":120483,"mol_weight":0,"name":"Alkaline Phosphatase, Calf Intest (CIP) - 1,000 units","linfor":"","url":"https:\/\/www.neb.com\/M0290","sku":"M0290S","cas_number":"","rrid":"","public":0,"vend