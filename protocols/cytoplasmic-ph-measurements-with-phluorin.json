critical":null,"critical_id":null,"duration":0},{"id":961847,"guid":"22C8BDC0AF5A11EAA443893F4F0102B6","previous_id":961846,"previous_guid":"02198B00AF5911EAA443893F4F0102B6","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"F442C04BD0724FA6B5368D0EC7F3AEE4","order_id":1,"type_id":6,"title":"Section","source":{"title":"Sample preparation"}},{"id":1054724,"guid":"86FB7928BE134705B6E334D80563093F","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Prepare a tunnel-slide\/flow cell and attach cells to the coverslip with the preferred surface attachment method (<\/div><div class = \"text-block\"><a href=\"https:\/\/www.nature.com\/articles\/s41598-019-55798-0.pdf\" style = \"text-decoration:underline;color:blue;cursor:pointer;\"><span style = \":;\">Wang et al. 2019<\/span><\/a><\/div><div class = \"text-block\">)<\/div><\/div>"}},{"id":1054725,"guid":"9B8DAC3B42C24B86B63B8F42116C6DDD","order_id":2,"type_id":26,"title":"notes","source":{"id":0,"parent_id":0,"uri":"","title":"","body":"<div class = \"text-blocks\"><div class = \"text-block\">It is preferable to use a non-fluorescent medium for imaging. If needed you can clean your coverslips with KOH or by baking them. <\/div><\/div>","created_on":0,"changed_on":0,"creator":{"name":" ","affiliation":null,"affiliations":[],"username":"","note":null,"link":null,"image":{"source":"","placeholder":""},"badges":[],"verified":0,"is_verified_user":false,"research_interests":null,"blocked_by_you":false,"blocked_you":false,"hide_following":false},"comments":[]}}],"cases":[],"data":null,"html":null,"section":null,"section_color":"#A492FF","section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":961848,"guid":"B94892C0AF5A11EAA443893F4F0102B6","previous_id":961847,"previous_guid":"22C8BDC0AF5A11EAA443893F4F0102B6","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"6A394D872F824B65BFDB41879F48AD0C","order_id":1,"type_id":6,"title":"Section","source":{"title":"Cells imaging"}},{"id":1054724,"guid":"7F096B9DF1E94299B3BD85358A9AA166","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Cell imaging is done by custom-made microscope with Nikon CFI Plan Apochromat<\/div><div class = \"text-block\">Lambda 100x objective (NA 1.45) and iXon Ultra 897 EMCCD camera. <\/div><div class = \"text-block\">Narrow spectrum 395 nm LED is used for the excitation at 395 nm and Neutral white LED with ET470\/40x filter for 475 nm excitation. Emission is collected at 520 nm using ET525\/40m filter.<\/div><div class = \"text-block\">Imaging settings vary depending on the experiment.<\/div><\/div>"}},{"id":1054725,"guid":"5DFF4050AF5D11EAA443893F4F0102B6","order_id":2,"type_id":28,"title":"equipment","source":{"brand":"Chroma Technology","sku":"ET520\/40m","specifications":null,"can_edit":false,"name":"ET520\/40m","type":"Narrow band emission filter","link":"https:\/\/www.chroma.com\/products\/parts\/et520-40m","file":null,"image":null}},{"id":1054726,"guid":"046293D0AF5D11EAA443893F4F0102B6","order_id":3,"type_id":28,"title":"equipment","source":{"brand":"Chroma Technology","sku":"ET470\/40x","specifications":null,"can_edit":false,"name":"ET470\/40x","type":"Narrow band filter","link":"https:\/\/www.chroma.com\/products\/parts\/et470-40x","file":null,"image":null}},{"id":1054727,"guid":"75A43810AF5C11EAA443893F4F0102B6","order_id":4,"type_id":28,"title":"equipment","source":{"brand":"Andor","sku":"iXon Ultra 897 EMCCD","specifications":null,"can_edit":false,"name":"iXon Ultra 897 EMCCD","type":"EMCCD camera","link":"https:\/\/andor.oxinst.com\/products\/ixon-emccd-camera-series\/ixon-ultra-897","file":null,"image":null}},{"id":1054728,"guid":"29147500AF5C11EAA443893F4F0102B6","order_id":5,"type_id":28,"title":"equipment","source":{"brand":"Nikon","sku":"CFI Plan Apochromat Lambda 100X Oil","specifications":null,"