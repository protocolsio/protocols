locked":0},"guid":"272B1FE31313490AAE19AD7ACD0EE0EC","state_version_id":228,"steps":[{"id":1041006,"guid":"A392B0E68FB14D8899654FE2B152D208","previous_id":null,"previous_guid":null,"modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"A3033A8F473B482FA15985A113498065","order_id":1,"type_id":6,"title":"Section","source":{"title":"Ligation "}},{"id":1054724,"guid":"895EF7E501D842168CC728453304B887","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\"><div class = \"justify\" style = \"text-align:center\"><\/div><\/div><div style = \"text-align :; float : ;\"><video style = \"\" src = \"https:\/\/s3.amazonaws.com\/pr-journal\/79qig6w.mp4\" \/><\/div><\/div>"}},{"id":1054725,"guid":"B9D15E90CF774DA8896EA7D12980BED8","order_id":2,"type_id":1,"title":"description","source":{"description":"<div style = \"text-align :; float : ;\"><video style = \"\" src = \"https:\/\/s3.amazonaws.com\/pr-journal\/79qig6w.mp4\" \/><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":null,"section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":1041007,"guid":"7057AEDCD68B44EE929B67CEC0EB03E1","previous_id":1041006,"previous_guid":"A392B0E68FB14D8899654FE2B152D208","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"9871F175281C46F0A0AA1F2731AEC596","order_id":1,"type_id":6,"title":"Section","source":{"title":"Ligation "}},{"id":1054724,"guid":"DA1746ADF4E24180A9BEDE84819D4DFE","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Set up ligation reactions as\u00a0follows:\u00a0<\/div><div style = \"text-align :; float : ;\"><img style = \"\" src = \"https:\/\/s3.amazonaws.com\/pr-journal\/qxufw26.png\" \/><\/div><div class = \"text-block\">Use tubes known to have\u00a0low DNA-binding capacity. Vortex the 2X Rapid Ligation Buffer vigorously before each use.<\/div><\/div>"}},{"id":1054725,"guid":"4A71F29FB99E46F5A595538FB0C4772C","order_id":2,"type_id":26,"title":"notes","source":{"id":0,"parent_id":0,"uri":"","title":"","body":"<div class = \"text-blocks\"><div class = \"text-block\">2X Rapid Ligation Buffer contains ATP, which degrades during temperature fluctuations. Avoid multiple freeze-thaw cycles and exposure to frequent temperature changes by making single-use aliquots of the buffer.<\/div><\/div>","created_on":0,"changed_on":0,"creator":{"name":" ","affiliation":null,"affiliations":[],"username":"","note":null,"link":null,"image":{"source":"","placeholder":""},"badges":[],"verified":0,"is_verified_user":false,"research_interests":null,"blocked_by_you":false,"blocked_you":false,"hide_following":false},"comments":[]}},{"id":1054726,"guid":"9170FB2D44304B828DDC3CF093C2546C","order_id":3,"type_id":26,"title":"notes","source":{"id":0,"parent_id":0,"uri":"","title":"","body":"<div class = \"text-blocks\"><div class = \"text-block\">Longer incubation times will increase the number of transformants. Generally, incubation overnight at 4\u00b0C will produce the maximum number of transformants.<\/div><\/div>","created_on":0,"changed_on":0,"creator":{"name":" ","affiliation":null,"affiliations":[],"username":"","note":null,"link":null,"image":{"source":"","placeholder":""},"badges":[],"verified":0,"is_verified_user":false,"research_interests":null,"blocked_by_you":false,"blocked_you":false,"hide_following":false},"comments":[]}},{"id":1054727,"guid":"98692E67D101413D86C337742AC0D62E","order_id":4,"type_id":26,"title":"notes","source":{"id":0,"parent_id":0,"uri":"","title":"","body":"<div class = \"text-blocks\"><div class = \"text-block\">Use only the T4 DNA Ligase supplied with this system to perform pGEM\u00ae-T and pGEM\u00ae-T Easy Vector ligations. Other commercial preparations of T4 DNA ligase may contain exonuclease activities that may remove the terminal deoxythymidines from the vector.<\/div><\/div>","created_on":0,"changed_on":0,"creator":{"name":" ","affiliation":null,"affiliations":[],"username":"","note":null,"link":null,"image":{"source":"","placeholder":""},"badges":[],"verified":0,"is_verified_user":false,"research_interests":null,"blocked_by_you":false,"blocked_you":false,"hide_following":false},"comments":[]}}],"cases":[],"data":null,"html":null,"section":null,"section_color":null,"section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":1041008,"guid":"4A34A5A83D97486BBBD410AFDEB0DC0B","previous_id":1041007,"previous_guid":"7057AEDCD68B44EE929B67CEC0EB03E1","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"73666F099C61434CA1AA32260825793A","order_id":1,"type_id":6,"title":"Section","source":{"title":"Ligation "}},{"id":1054724,"guid":"D142E83F6CCD46218F11D9CF2364E380","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Mix the reactions by pipetting.\u00a0Since you will be Blue\/White screening, running the control reactions each time is less necessary. The TAs will run negative and positive controls at regular intervals.<\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":null,"section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":1041009,"guid":"E78AE25937A042EAA66C6D917C5F4EA8","previous_id":1041008,"previous_guid":"4A34A5A83D97486BBBD410AFDEB0DC0B","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"BD2837CEEBC54FC0BEFBBA0B095977ED","order_id":1,"type_id":6,"title":"Section","source":{"title":"Ligation "}},{"id":1054724,"guid":"977ACC67AFF64DCD9E6388A0B680B7F3","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Incubate the reactions for 1 hour at room temperature. Alternatively, if the maximum number of transformants is required, incubate the reactions overnight at 4\u00b0C.<\/div><\/div>"}},{"id":1054725,"guid":"BD7E47CAC85B4586BD19ECFD1DF57226","order_id":2,"type_id":4,"title":"duration","source":{"duration":3600,"title":"Incubation"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":null,"section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":1041010,"guid":"A8B9EC0E52294B178502531291C0160A","previous_id":1041009,"previous_guid":"E78AE25937A042EAA66C6D917C5F4EA8","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"4856C59688464D3EA79B1576923E6525","order_id":1,"type_id":6,"title":"Section","source":{"title":"Ligation "}},{"id":1054724,"guid":"C8ED14E35E8B415A9D54BFE7BF55EAB7","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Analyze an aliquot of the PCR reaction on an agarose gel before use in the ligation reaction to verify that the reaction produced the desired product. The PCR product to be ligated can be gel-purified or purified directly from the PCR amplification using a PCR Clean-Up system.\u00a0<\/div><\/div>"}},{"id":1054725,"guid":"F2C6C357CEC842DC8B23D3330BFA379A","order_id":2,"type_id":26,"title":"notes","source":{"id":0,"parent_id":0,"uri":"","title":"","body":"<div class = \"text-blocks\"><div class = \"text-block\">Cleanup of reactions prior to ligation is recommended to remove primer dimers or other undesired reaction products and to improve ligation efficiency. Exposure of PCR products to shortwave ultraviolet light should be minimized in order to avoid the formation of pyrimidine dimers.<\/div><\/div>","created_on":0,"changed_on":0,"creator":{"name":" ","affiliation":null,"affiliations":[],"username":"","note":null,"link":null,"image":{"source":"","placeholder":""},"badges":[],"verified":0,"is_verified_user":false,"research_interests":null,"blocked_by_you":false,"blocked_you":false,"hide_following":false},"comments":[]}}],"cases":[],"data":null,"html":null,"section":null,"section_color":null,"section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":1041011,"guid":"32BC0A949021498690DDCC6D732D0E82","previous_id":1041010,"previous_guid":"A8B9EC0E52294B178502531291C0160A","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"A0CA908B744C42718E7283209FCF7E26","order_id":1,"type_id":6,"title":"Section","source":{"title":"Transformation"}},{"id":1054724,"guid":"57BF98C39BED4B0993304DF13A7C68F6","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Prepare two LB\/ampicillin\/IPTG\/X-Gal plates for each ligation reaction. To prepare your LB-AMP plates, add  Spread 40 \u00b5l of the IPTG stock and 40 \u00b5l of the X-gal stock (aliquots are stored in the freezer) on top of the plate with a hockey stick spreader. Equilibrate the plates for 30 minutes at 37\u2033C. <\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":null,"section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":1041012,"guid":"2D4A565DE2984309922EFC59370E9524","previous_id":1041011,"previous_guid":"32BC0A949021498690DDCC6D732D0E82","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"41C3FD36E7904EC08C5BA6083890F092","order_id":1,"type_id":6,"title":"Section","source":{"title":"Transformation"}},{"id":1054724,"guid":"457BEF9C1F0743B2A2E750FB0B383A32","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">You will get the linearized pGEM-T, Ligase Rapid Reaction Buffer, and DNA ligase from the instructor or TA. Store tube on ice. You will add your PCR product to this mix at a 1:3 ratio of vector (pGEM-T) to insert (your PCR product). You can use the calculator at <\/div><div class = \"text-block\"><a href=\"http:\/\/www.promega.com\/biomath\" style = \"text-decoration:underline;color:blue;cursor:pointer;\"><span style = \":;\">www.promega.com\/biomath<\/span><\/a><\/div><div class = \"text-block\">. pGEM-T is 3kb and the reaction uses 50 ng of vector. This calculator outputs a 1:1 ratio, so you will need to multiply by 3 to get the mass needed for your PCR product ligation. Then transform into Mix&Go competent cells.<\/div><\/div>"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":null,"section_duration":0,"critical":null,"critical_id":null,"duration":0},{"id":1041022,"guid":"414F77274ADE4862A2092D93E9C035BB","previous_id":1041012,"previous_guid":"2D4A565DE2984309922EFC59370E9524","modified_on":0,"protocol_id":0,"components":[{"id":1054723,"guid":"225EA3E1B20A4CA0BB4632D715CD77AC","order_id":1,"type_id":6,"title":"Section","source":{"title":"Transformation"}},{"id":1054724,"guid":"F7A39BCE26CB4A288164B56D4679A3F1","order_id":1,"type_id":1,"title":"description","source":{"description":"<div class = \"text-blocks\"><div class = \"text-block\">Incubate the plates overnight (16\u201324 hours) at 37\u00b0C.\u00a0<\/div><\/div>"}},{"id":1054725,"guid":"291E72775D7E4E4191BF09DFE2453765","order_id":2,"type_id":26,"title":"notes","source":{"id":0,"parent_id":0,"uri":"","title":"","body":"<div class = \"text-blocks\"><div class = \"text-block\">If 100\u03bcl is plated, approximately 100 colonies per plate are routinely seen using competent cells that are 1 x 10^8cfu\/\u03bcg DNA. Use of ultra-high- efficiency competent cells may result in a higher number of background colonies. Longer incubations or storage of plates at 4\u00b0C (after 37\u00b0C overnight incubation) may be used to facilitate blue color development. White colonies generally contain inserts; however, inserts may also be present in blue colonies.<\/div><\/div>","created_on":0,"changed_on":0,"creator":{"name":" ","affiliation":null,"affiliations":[],"username":"","note":null,"link":null,"image":{"source":"","placeholder":""},"badges":[],"verified":0,"is_verified_user":false,"research_interests":null,"blocked_by_you":false,"blocked_you":false,"hide_following":false},"comments":[]}},{"id":1054726,"guid":"33472AF4957C44639957B0C9D449E244","order_id":3,"type_id":26,"title":"notes","source":{"id":0,"parent_id":0,"uri":"","title":"","body":"<div class = \"text-blocks\"><div class = \"text-block\">Colonies containing \u03b2-galactosidase activity may grow poorly relative to cells lacking this activity. After overnight growth, the blue colonies may be smaller than the white colonies, which are approximately one millimeter in diameter. <\/div><\/div>","created_on":0,"changed_on":0,"creator":{"name":" ","affiliation":null,"affiliations":[],"username":"","note":null,"link":null,"image":{"source":"","placeholder":""},"badges":[],"verified":0,"is_verified_user":false,"research_interests":null,"blocked_by_you":false,"blocked_you":false,"hide_following":false},"comments":[]}},{"id":1054727,"guid":"A8F1235DF0EF446EA2BFDE95A290C27C","order_id":4,"type_id":26,"title":"notes","source":{"id":0,"parent_id":0,"uri":"","title":"","body":"<div class = \"text-blocks\"><div class = \"text-block\">Blue color will become darker after the plate has been stored overnight at 4\u00b0C.<\/div><\/div>","created_on":0,"changed_on":0,"creator":{"name":" ","affiliation":null,"affiliations":[],"username":"","note":null,"link":null,"image":{"source":"","placeholder":""},"badges":[],"verified":0,"is_verified_user":false,"research_interests":null,"blocked_by_you":false,"blocked_you":false,"hide_following":false},"comments":[]}},{"id":1054728,"guid":"A008F2E887D14E9F80BBE0906733BE3C","order_id":5,"type_id":4,"title":"duration","source":{"duration":57600,"title":"Incubation"}},{"id":1054729,"guid":"87C52B342BFC4DE6B8D5A832F78FAE56","order_id":6,"type_id":24,"title":"temperature","source":{"temperature":37,"unit":"\u00b0C","title":"Incubation"}}],"cases":[],"data":null,"html":null,"section":null,"section_color":null,"section_duration":0,"critical":null,"critical_id":null,"duration":0}],"document":null,"materials":[],"description":"<div class = \"text-blocks\"><div class = \"text-block\"><span>Protocol for PCR Cloning with Blue\/White Selection and Easy Insert Excision using <\/span><a href=\"https:\/\/www.promega.de\/products\/pcr\/pcr-cloning\/pgem-t-easy-vector-systems\/?catNum=A1360\" style = \"text-decoration:underline;color:blue;cursor:pointer;\"><span style = \":;\">pGEM\u00ae-T Easy Vector Systems.<\/span><\/a><span style = \":;\"><\/span><\/div><div class = \"text-block\"><span>(For use with <\/span><a href=\"https:\/\/www.promega.com\/products\/pcr\/pcr-cloning\/pgem-t-vector-systems\/?catNum=A3600\" style = \"text-decoration:underline;color:blue;cursor:pointer;\"><span style = \":;\">A3600<\/span><\/a><span>, <\/span><a href=\"https:\/\/www.promega.com\/products\/pcr\/pcr-cloning\/pgem-t-vector-systems\/?catNum=A3610\" style = \"text-decoration:underline;color:blue;cursor:pointer;\"><span style = \":;\">A3610<\/span><\/a><span>, <\/span><a href=\"https:\/\/www.promega.com\/products\/pcr\/pcr-cloning\/pgem-t-easy-vector-systems\/?catNum=A1360\" style = \"text-decoration:underline;color:blue;cursor:pointer;\"><span style = \":;\">A1360<\/span><\/a><span>, or <\/span><a href=\"https:\/\/www.promega.com\/products\/pcr\/pcr-cloning\/pgem-t-easy-vector-systems\/?catNum=A1380\" style = \"text-decoration:underline;color:blue;cursor:pointer;\"><span style = \":;\">A1380<\/span><\/a><span>.)\u00a0\u00a0<\/span><\/div><\/div>","changed_on":1601660421}